{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Orcamentos",
  "type": "object",

  "properties": {
    "nome": {
      "type": "string",
      "minLength":3
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "telefone": {
      "type": "string",
      "minLength":8,
      "maxLength": 15,
      "pattern": "^\\+?[0-9]*$",
      "description": "O telefone deve conter apenas números e pode começar com +"

    },
    "cpf_cnpj": {
      "type": "string",
      "minLength": 14,
      "maxLength": 18,
      "pattern": "^(\\d{11}|\\d{14}|\\d{2}\\.\\d{3}\\.\\d{3}/\\d{4}-\\d{2})$",
      "description": "O CPF deve conter 11 dígitos e o CNPJ deve conter 14 dígitos ou o formato XX.XXX.XXX/XXXX-XX"
    }
  },
    "required": ["nome",
    "email",
    "telefone",
    "cpf_cnpj"
  ]
}
