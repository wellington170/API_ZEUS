{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Membros",
  "type": "object",
  "properties": {
    "habilidades":{
      "type": "string",
      "minLength": 3
    },
    "nome_completo": {
      "type": "string",
      "minLength": 3
    },
    "data_de_ingresso": {
      "type": "string",
      "format": "date"
    },
    "email_institucional": {
      "type": "string",
      "format": "email"
    },
    "genero": {
      "type": "string",
      "enum": ["Masculino", "Feminino", "Outro"]
    },
    "cargo": {
      "type": "string"
    },
    "telefone": {
      "type": "string",
      "minLength": 8,
      "maxLength": 15,
      "pattern": "^\\+?[0-9]*$",
      "description": "O telefone deve conter apenas números e pode começar com +"
    },
    "administrador": {
      "type": "string",
      "enum": ["Sim", "Não"]
    }
  }
}
